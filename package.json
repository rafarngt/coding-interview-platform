{
  "name": "coding-interview-platform",
  "version": "1.0.0",
  "description": "Real-time collaborative coding interview platform",
  "scripts": {
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "client": "cd client && npm run dev",
    "server": "cd server && npm start",
    "test": "npm run test --prefix tests",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install && cd ../tests && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "client",
    "server",
    "tests"
  ]
}